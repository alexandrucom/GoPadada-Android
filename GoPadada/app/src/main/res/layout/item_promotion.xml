<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_promotion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_promotion"
            android:layout_width="@dimen/profile_dim"
            android:layout_height="@dimen/profile_dim"
            android:layout_marginRight="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_profile" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_promotion">

            <TextView
                android:id="@+id/tv_promotion_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bere"
                android:textColor="@color/colorGrayDark"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_promotion_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_promotion_name"
                android:layout_marginTop="@dimen/margin_small"
                android:text="Bere gratis la toata lumea "
                android:textColor="@color/colorGrayDark"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_point_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_promotion_description"
                android:text="243/555 Points"
                android:textColor="@color/colorGrayDark"
                android:textSize="14dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_purchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_promotion"
            android:layout_marginTop="@dimen/margin_default"
            android:background="@drawable/bbtn_round"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/purchase"
            android:textColor="@color/colorBlack" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rl_promotion"
        android:background="#f2f2f2" />
</RelativeLayout>